<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <div class="login100-pic js-tilt" data-tilt>
        <%= image_tag "login/img-01.webp", alt: "IMG" %>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'login100-form validate-form') do |f| %>
            <span class="login100-form-title">
              Member Login
            </span>
        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input100", placeholder: "Email" %>
          <span class="focus-input100"></span>
          <span class="symbol-input100">
                <i class="fa fa-envelope" aria-hidden="true"></i>
              </span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="Password is required">
          <%= f.password_field :password, autocomplete: "current-password", class: "input100", placeholder: "Password" %>
          <span class="focus-input100"></span>
          <span class="symbol-input100">
                <i class="fa fa-lock" aria-hidden="true"></i>
              </span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="Password is required">
          <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "input100", placeholder: "Confirm Password" %>
          <span class="focus-input100"></span>
          <span class="symbol-input100">
                <i class="fa fa-lock" aria-hidden="true"></i>
              </span>
        </div>

        <div class="container-login100-form-btn">
          <button class="login100-form-btn">
            Sign up
          </button>
        </div>
        <div class="text-center p-t-12">
              <span class="txt1">
                Already Registred?
              </span>
          <%- if controller_name != 'sessions' %>
            <%= link_to "Log in", new_session_path(resource_name), class: "txt2" %><br />
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%#= render "users/shared/links" %>


